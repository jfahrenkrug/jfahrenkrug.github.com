---
import Icon from './Icon.astro';

interface Props {
	engagement: {
		title: string;
		date: Date;
		titleUrl?: string;
		videoUrl?: string;
		city: string;
		eventName: string;
	};
}

const { engagement: data } = Astro.props;
const isUpcoming = data.date > new Date();
const year = data.date.getFullYear();
---

<div class="engagement-card">
	<div class="engagement-header">
		<div class="engagement-meta">
			<span class="year">{year}</span>
			{isUpcoming && <span class="upcoming-badge">Upcoming</span>}
		</div>
		<div class="engagement-location">
			<Icon icon="location" size="1em" />
			<span>{data.city}</span>
		</div>
	</div>
	
	<div class="engagement-content">
		<h3 class="engagement-title">
			{data.titleUrl ? (
				<a href={data.titleUrl} target="_blank" rel="noopener noreferrer">
					{data.title}
					<Icon icon="external-link" size="0.8em" />
				</a>
			) : (
				data.title
			)}
		</h3>
		
		<p class="event-name">{data.eventName}</p>
		
		{data.videoUrl && (
			<div class="video-link">
				<a href={data.videoUrl} target="_blank" rel="noopener noreferrer">
					<Icon icon="video" size="1em" />
					<span>Watch Recording</span>
				</a>
			</div>
		)}
	</div>
</div>

<style>
	.engagement-card {
		background: var(--gradient-subtle);
		border: 1px solid var(--gray-800);
		border-radius: 0.75rem;
		padding: 1.5rem;
		transition: box-shadow var(--theme-transition);
	}

	.engagement-card:hover {
		box-shadow: var(--shadow-md);
	}

	.engagement-header {
		display: flex;
		justify-content: space-between;
		align-items: flex-start;
		margin-bottom: 1rem;
		flex-wrap: wrap;
		gap: 0.5rem;
	}

	.engagement-meta {
		display: flex;
		align-items: center;
		gap: 0.75rem;
	}

	.year {
		font-family: var(--font-brand);
		font-size: var(--text-lg);
		font-weight: 600;
		color: var(--gray-0);
	}

	.upcoming-badge {
		background: var(--accent-regular);
		color: var(--accent-text-over);
		padding: 0.25rem 0.5rem;
		border-radius: 0.375rem;
		font-size: var(--text-xs);
		font-weight: 500;
		text-transform: uppercase;
		letter-spacing: 0.05em;
	}

	.engagement-location {
		display: flex;
		align-items: center;
		gap: 0.375rem;
		color: var(--gray-300);
		font-size: var(--text-sm);
	}

	.engagement-content {
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
	}

	.engagement-title {
		margin: 0;
		font-family: var(--font-brand);
		font-size: var(--text-xl);
		font-weight: 600;
		line-height: 1.2;
		color: var(--gray-0);
	}

	.engagement-title a {
		color: inherit;
		text-decoration: none;
		display: inline-flex;
		align-items: baseline;
		gap: 0.375rem;
		transition: color var(--theme-transition);
	}

	.engagement-title a:hover {
		color: var(--accent-text-over);
	}

	.event-name {
		margin: 0;
		font-size: var(--text-base);
		color: var(--gray-300);
		font-style: italic;
	}

	.video-link a {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		background: var(--accent-regular);
		color: var(--accent-text-over);
		text-decoration: none;
		font-size: var(--text-sm);
		font-weight: 600;
		padding: 0.5rem 1rem;
		border-radius: 0.375rem;
		transition: background-color var(--theme-transition);
		box-shadow: var(--shadow-sm);
	}

	.video-link a:hover {
		background: var(--accent-dark);
		box-shadow: var(--shadow-md);
	}

	@media (min-width: 50em) {
		.engagement-card {
			border-radius: 1rem;
			padding: 2rem;
		}

		.engagement-title {
			font-size: var(--text-2xl);
		}
	}
</style>